<Window x:Class="WpfGenericHost.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfGenericHost"
        mc:Ignorable="d"
        xmlns:viewModel="clr-namespace:WpfGenericHost"
        Title="MainWindow" Height="450" Width="800">
    
    <Grid>
        <StackPanel>
            <Label Content="{Binding Text}"></Label>
            <Button Command="{Binding OpenAnotherWindowCommand}" Content="click me"></Button>
        </StackPanel>
    </Grid>
</Window>
